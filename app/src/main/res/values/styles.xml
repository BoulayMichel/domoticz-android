<resources>
    <!-- Base application theme. -->
    <style name="AppThemeIntro" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeMain" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_selected_text</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>

        <!-- Style to use for Snackbars in this theme. -->
        <item name="snackbarStyle">@style/snackbarStyle</item>
        <item name="snackbarButtonStyle">@style/snackbarButton</item>
        <item name="snackbarTextViewStyle">@style/snackbarText</item>

        <!-- Custom values -->
        <item name="toolbarBackground">@color/primary</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="recyclerBackground">@color/background_grey</item>
        <item name="listviewRowBackground">@color/white</item>
        <item name="backdropBackground">@color/primary</item>
        <item name="buttonTextColor">@color/primary_accent</item>
    </style>

    <style name="AppThemeDarkMain" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/secondary_dark</item>
        <item name="colorAccent">@color/secondary_accent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/secondary_dark</item>
        <item name="material_drawer_primary_text">@color/white</item>
        <item name="material_drawer_primary_icon">@color/white</item>
        <item name="material_drawer_secondary_text">@color/white</item>
        <item name="material_drawer_hint_text">@color/white</item>
        <item name="material_drawer_divider">@color/secondary</item>
        <item name="material_drawer_selected">@color/secondary_dark</item>
        <item name="material_drawer_selected_text">@color/secondary_accent</item>
        <item name="material_drawer_header_selection_text">@color/white</item>

        <!-- Style to use for Snackbars in this theme. -->
        <item name="snackbarStyle">@style/snackbarDarkStyle</item>
        <item name="snackbarButtonStyle">@style/snackbarDarkButton</item>
        <item name="snackbarTextViewStyle">@style/snackbarDarkText</item>

        <!-- Custom values -->
        <item name="toolbarTextColor">@color/white</item>
        <item name="toolbarBackground">@color/secondary</item>
        <item name="recyclerBackground">@color/secondary_dark</item>
        <item name="listviewRowBackground">@color/secondary</item>
        <item name="backdropBackground">@color/secondary</item>
        <item name="buttonTextColor">@color/secondary_accent</item>
    </style>


    <!-- Snackbar styles -->
    <style name="snackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="snackbarButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="snackbarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="snackbarDarkStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/grey_900</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="snackbarDarkButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey_900</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="snackbarDarkText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeToolbarStyle" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/secondary_dark</item>
        <item name="colorAccent">@color/secondary_accent</item>
    </style>

    <style name="background_listview">
        <item name="android:paddingLeft">@dimen/row_space</item>
        <item name="android:paddingRight">@dimen/row_space</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!--        Welcome     -->
    <style name="welcome_navButtons">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="nav_name" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="row_name" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="row_dash_name" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="row_name_micro" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="row_name_small" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="row_body1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="row_body2" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="row_dash_body1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="row_dash_body2" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!--        List view        -->
    <style name="listView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!--        Debugging        -->
    <style name="debug_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="debug_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="debug_text">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light.Bridge"/>
</resources>
